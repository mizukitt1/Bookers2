
<p id="notice"></p>
<div class="container px-5 px-sm-0">
    <% if @new_book.errors.any? %>
    <h2>error</h2>
        <%= @new_book.errors.count %>error prohibited this book from being saved:<br>
         <% @new_book.errors.full_messages.each do |message| %>
           <%= message %>
        <% end %>
    <% end %>
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/list', user: current_user %>
            <%= render 'books/list', book: @new_book %>
        </div>
    
        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <yh colspan="3"></yh>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                    <tr>
                        <td>
                            <%= link_to user_path(book.user) do %>
                                <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                            <% end %>
                        </td>
                        <td><%= link_to book.title, book_path(book.id) %></td>
                        <td><%= book.body %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>