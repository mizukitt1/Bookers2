<h2 class="mt-3">New book</h2>
<%= form_with model:book, local:true do |f| %>
  <div class="index-field">Title</div>
  <%= f.text_field :title %>
  <div class="index-field">Opinion</div>
  <%= f.text_area :body %>
  <div class="index-field"></div>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>